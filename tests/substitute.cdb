def test101():
    {m,n,p}::Symbol;
    A_{m}::SelfNonCommuting.
    ex:= A_{3} A_{2} A_{1} A_{0} + A_{0} A_{1};
    rl:= A_{m?} A_{n?} | m? > n? -> Q;
    substitute(ex, rl, repeat=True);
    tst:= Q Q + A_{0} A_{1} - @(ex);
    assert(tst==0)
    print('Test 101 passed')

test101()

def test102():
    __cdbkernel__=create_scope()
    {m,n,p}::Symbol;
    A_{m}::SelfNonCommuting;
    ex:= A_{2} A_{3} A_{1} + A_{1} A_{0};
    # We need 'm?' etc here because we do not yet match _{m} to an integer, not even
    # when 'm' is a symbol.
    rl:= A_{m?} A_{n?} | m? > n? -> A_{n?} A_{m?} + Q;
    ex.reset()
    while ex.changed():
        distribute(ex)
        substitute(ex, rl)
        sort_product(ex)
    
    tst:= A_{1} A_{2} A_{3} + A_{3} Q + A_{2} Q + A_{0} A_{1} + Q - @(ex);
    assert(tst==0)
    print('Test 102 passed')

test102()
    
